# Arquivo de configuração de ambiente para o backend
# Copie este arquivo para .env e configure as variáveis

# Configuração do servidor
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# URL do frontend (para CORS)
FRONTEND_URL=http://localhost:5173

# Configuração do Asaas
ASAAS_API_KEY=sua_chave_do_asaas_aqui
ASAAS_BASE_URL=https://www.asaas.com/api/v3
ASAAS_TIMEOUT=30000
ASAAS_RETRY_ATTEMPTS=3
ASAAS_RETRY_DELAY=1000

# Configurações padrão de pagamento
ASAAS_DUE_DATE_DAYS=7
ASAAS_DISCOUNT_PERCENTAGE=5.0
ASAAS_DISCOUNT_DAYS=3
ASAAS_INTEREST_PERCENTAGE=2.0
ASAAS_FINE_PERCENTAGE=1.0
ASAAS_MAX_INSTALLMENTS=12
ASAAS_MIN_INSTALLMENT_VALUE=50.0

# Configurações de segurança
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
PAYMENT_RATE_LIMIT_MAX=20
